<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#00b7ee">

        <ImageButton
            android:id="@+id/button_menu"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:background="@drawable/repairlist_slidemenu"
            android:layout_height="25dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="设置"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_weight="11"/>

        <ImageButton
            android:id="@+id/button_ok"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:background="@drawable/repairlist_search"
            android:layout_height="25dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="#c0c0c0" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/record_detail_smallbackground">

        <TextView
            android:id="@+id/tv_location"
            android:layout_marginLeft="10dp"
            android:text="手机号    "
            android:textSize="15dp"
            android:textColor="#b0b0b0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

        <EditText
            android:id="@+id/edit_phone_number"
            android:background="@null"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="10dp" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#c0c0c0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/record_detail_smallbackground">

        <TextView
            android:id="@+id/tv_phone_number"
            android:text="昵称        "
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#b0b0b0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

        <EditText
            android:id="@+id/edit_nickname"
            android:textColor="#000000"
            android:background="@null"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />



    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#c0c0c0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/record_detail_smallbackground">

        <TextView
            android:id="@+id/tv_source"
            android:text="头像        "
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:textColor="#b0b0b0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:id="@+id/image_head"
            android:layout_width="120dp"
            android:layout_marginLeft="45dp"
            android:layout_gravity="center"
            android:layout_height="120dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:text="保存"
        android:textColor="#ffffff"
        android:background="@drawable/record_detail_bluebutton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        />


</LinearLayout>