<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/button_back"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:background="@drawable/record_back"
            android:layout_height="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp"
            android:text="反馈"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#00b7ee" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="#c0c0c0" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/record_detail_smallbackground">

        <TextView
            android:id="@+id/tv_grade"
            android:text="评价"
            android:textColor="#b0b0b0"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/text_grade"
            android:text="4"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:background="@null"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="2"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#c0c0c0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/evaluation_big_whitebackground">

        <TextView
            android:id="@+id/tv_suggestion"
            android:layout_marginLeft="10dp"
            android:text="意见及建议"
            android:textColor="#b0b0b0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/text_suggestion"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textColor="#000000"
            android:background="@drawable/evaluation_textview"
            android:textSize="20dp"
            android:lines="6"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>


    </LinearLayout>

</LinearLayout>